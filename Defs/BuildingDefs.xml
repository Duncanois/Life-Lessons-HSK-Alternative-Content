    </graphicData>
    <castEdgeShadows>true</castEdgeShadows>
    <staticSunShadowHeight>0.5</staticSunShadowHeight>
    <costStuffCount>120</costStuffCount>
    
    <statBases>
      <WorkToBuild>2000</WorkToBuild>
      <MaxHitPoints>350</MaxHitPoints>
      <Mass>22</Mass>
    </statBases>
    <size>(2,1)</size>
  </ThingDef>
</Defs>