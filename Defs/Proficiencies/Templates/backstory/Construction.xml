      <proficiencies>
        <li>PrinciplesWoodworking</li>
        <li>Carving</li>
        <li>Carpentry</li>
        <li>BasicConstruction</li>
        <li>Threadcraft</li>
      </proficiencies>
    </package>
    <heuristics>
      <li Class="LifeLessons.TechLevelHeuristic">
        <required>true</required>
        <matches>Neolithic</matches>
      </li>
    </heuristics>
    <overridesTemplates>
      <li>MedievalBuilder</li>
      <li>IndustrialBuilder</li>
      <li>SpacerBuilder</li>
    </overridesTemplates>
  </LifeLessons.BackstoryProficiencyTemplateDef>

