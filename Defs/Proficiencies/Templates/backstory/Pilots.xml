<?xml version="1.0" encoding="utf-8" ?>

<Defs>
  <LifeLessons.BackstoryProficiencyTemplateDef Abstract="True" Name="PilotBase">
    <applyToUnpatchedStory>true</applyToUnpatchedStory>
    <cost>10</cost>
    <heuristics>
      <li Class="LifeLessons.BackstoryHeuristic">
        <backstorySlot>Adulthood</backstorySlot>
        <value>5</value>
        <description>
          <containsAny>
            <li>helicopter</li>
            <li>fighter</li>
            <li>plane</li>
            <li>fighter</li>
          </containsAny>
        </description>
      </li>

      <li Class="LifeLessons.BackstoryHeuristic">
        <backstorySlot>Adulthood</backstorySlot>
        <value>2</value>
        <description>
          <containsAny>
            <li>trafficking</li>
            <li>crew</li>
            <li>plane</li>
            <li>academy</li>
            <li>navy</li>
          </containsAny>
        </description>
      </li>

      <li Class="LifeLessons.BackstoryHeuristic">
        <backstorySlot>Adulthood</backstorySlot>
        <value>8</value>
        <title>
          <containsAny>
            <li>pilot</li>
          </containsAny>
        </title>
      </li>
      <li Class="LifeLessons.BackstoryHeuristic">
        <backstorySlot>Adulthood</backstorySlot>
        <value>2</value>
        <title>
          <containsAny>
            <li>cargo</li>
            <li>freight</li>
            <li>fighter</li>
            <li>ship</li>
          </containsAny>
        </title>
      </li>
    </heuristics>
  </LifeLessons.BackstoryProficiencyTemplateDef>

  <LifeLessons.BackstoryProficiencyTemplateDef ParentName="PilotBase">
    <defName>Pilot</defName>
    <package>
      <proficiencies>
        <li>Piloting</li>
      </proficiencies>
      <conditionalProficiencies>
        <li>
          <options>
            <li>VehicleOperation</li>
          </options>
          <rolls>1</rolls>
          <chancePerRoll>0.9</chancePerRoll>
        </li>
        <li>
          <options>
            <li>Welding</li>
            <li>MachineOperator</li>
          </options>

          <weights>
            <li>1</li>
            <li>4</li>
          </weights>
          <rolls>2</rolls>
          <chancePerRoll>0.75</chancePerRoll>
        </li>
        <li>
          <options>
              <li>AirframeEngineering</li>
          </options>
          <rolls>1</rolls>
          <chancePerRoll>0.15</chancePerRoll>
        </li>
      </conditionalProficiencies>
    </package>
    <heuristics>
      <li Class="LifeLessons.TechLevelHeuristic">
        <required>true</required>
        <greaterThan>Medieval</greaterThan>
      </li>
    </heuristics>
  </LifeLessons.BackstoryProficiencyTemplateDef>

  <LifeLessons.BackstoryProficiencyTemplateDef ParentName="PilotBase">
    <defName>SpacePilot</defName>
    <cost>14</cost>
    <package>
      <proficiencies>
        <li>AdvancedPiloting</li>
      </proficiencies>
    </package>
    <heuristics>
      <li Class="LifeLessons.TechLevelHeuristic">
        <required>true</required>
        <greaterThan>Industrial</greaterThan>
      </li>
      <li Class="LifeLessons.BackstoryHeuristic">
        <backstorySlot>Adulthood</backstorySlot>
        <value>5</value>
        <description>
          <containsAny>
            <li>spaceship</li>
            <li>starfighter</li>
            <li>space</li>
          </containsAny>
        </description>
      </li>
      <li Class="LifeLessons.BackstoryHeuristic">
        <backstorySlot>Adulthood</backstorySlot>
        <value>4</value>
        <title>
          <containsAny>
            <li>spaceship</li>
            <li>starfighter</li>
          </containsAny>
        </title>
      </li>
    </heuristics>
  </LifeLessons.BackstoryProficiencyTemplateDef>

</Defs>