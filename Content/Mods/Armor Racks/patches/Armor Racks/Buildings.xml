<?xml version="1.0" encoding="utf-8" ?>
<Patch>
  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="ArmorRacks_ArmorRack"]</xpath>
    <match Class="PatchOperationAddModExtension">
      <xpath>Defs/ThingDef[defName="ArmorRacks_ArmorRack"]</xpath>
      <value>
        <li Class="LifeLessons.BuildingProficiencyExtension">
          <requirements>
            <li>Construction</li>
          </requirements>
        </li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="ArmorRacks_MechanizedArmorRack"]</xpath>
    <match Class="PatchOperationAddModExtension">
      <xpath>Defs/ThingDef[defName="ArmorRacks_MechanizedArmorRack"]</xpath>
      <value>
        <li Class="LifeLessons.BuildingProficiencyExtension">
          <requirements>
            <li>AdvancedConstruction</li>
          </requirements>
        </li>
      </value>
    </match>
  </Operation>

  <Operation Class="PatchOperationConditional">
    <xpath>Defs/ThingDef[defName="ArmorRacks_MendingArmorRack"]</xpath>
    <match Class="PatchOperationAddModExtension">
      <xpath>Defs/ThingDef[defName="ArmorRacks_MendingArmorRack"]</xpath>
      <value>
        <li Class="LifeLessons.BuildingProficiencyExtension">
          <requirements>
            <li>Engineering</li>
          </requirements>
        </li>
      </value>
    </match>
  </Operation>
</Patch>