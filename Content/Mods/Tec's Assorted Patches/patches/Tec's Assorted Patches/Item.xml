<?xml version="1.0" encoding="utf-8"?>
<Patch>

  <Operation Class="PatchOperationFindMod">
	<mods>
		<li>Vanilla Outposts Expanded</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
		  <li Class="PatchOperationAddModExtension">
			<xpath>Defs/ThingDef[defName="SeedCultivator"]</xpath>
			<value>
			  <li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
				  <li>Cultivation</li>
				  <li>Fertilization</li>
				  <li>Hydroponics</li>
				  <li>Engineering</li>
				</requirements>
				<softRequirement>False</softRequirement>
				<unqualifiedWorkSpeedMultiplier>1</unqualifiedWorkSpeedMultiplier>
				<unqualifiedQualityCap>Legendary</unqualifiedQualityCap>
			  </li>
			</value>
		  </li>
		  <li Class="PatchOperationAddModExtension">
			<xpath>Defs/ThingDef[defName="ArtillaryOutpostSupplies"]</xpath>
			<value>
			  <li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
				  <li>Engineering</li>
				  <li>IndustrialChemistry</li>
				</requirements>
				<softRequirement>False</softRequirement>
				<unqualifiedWorkSpeedMultiplier>1</unqualifiedWorkSpeedMultiplier>
				<unqualifiedQualityCap>Legendary</unqualifiedQualityCap>
			  </li>
			</value>
		  </li>
		  <li Class="PatchOperationAddModExtension">
			<xpath>Defs/ThingDef[defName="HiTechResearchBenchAssemblyKit"]</xpath>
			<value>
			  <li Class="LifeLessons.BillProficiencyExtension">
				<requirements>
				  <li>Engineering</li>
				  <li>Wavelengths</li>
				</requirements>
				<softRequirement>False</softRequirement>
				<unqualifiedWorkSpeedMultiplier>1</unqualifiedWorkSpeedMultiplier>
				<unqualifiedQualityCap>Legendary</unqualifiedQualityCap>
			  </li>
			</value>
		  </li>
		</operations>
	</match>
  </Operation>
  
  <Operation Class="PatchOperationFindMod">
	<mods>
		<li>[LTS]Tenants</li>
	</mods>
	<match Class="PatchOperationSequence">
		<operations>
			<li Class="PatchOperationAddModExtension">
				<xpath>Defs/ThingDef[defName="LTS_ThrowingKnife"]|Defs/CombatExtended.AmmoDef[defName="LTS_ThrowingKnife"]</xpath>
				<value>
				  <li Class="LifeLessons.BillProficiencyExtension">
					<requirements>
					  <li>Smithing</li>
					</requirements>
					<softRequirement>False</softRequirement>
					<unqualifiedWorkSpeedMultiplier>1</unqualifiedWorkSpeedMultiplier>
					<unqualifiedQualityCap>Legendary</unqualifiedQualityCap>
				  </li>
				</value>
			</li>
		</operations>
	</match>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="Apparel_EyePatchL"]</xpath>
    <value>
      <li Class="LifeLessons.BillProficiencyExtension">
        <requirements>
          <li>Tailoring</li>
        </requirements>
        <softRequirement>False</softRequirement>
        <unqualifiedWorkSpeedMultiplier>1</unqualifiedWorkSpeedMultiplier>
        <unqualifiedQualityCap>Legendary</unqualifiedQualityCap>
      </li>
    </value>
  </Operation>
  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="Apparel_EyePatchR"]</xpath>
    <value>
      <li Class="LifeLessons.BillProficiencyExtension">
        <requirements>
          <li>Tailoring</li>
        </requirements>
        <softRequirement>False</softRequirement>
        <unqualifiedWorkSpeedMultiplier>1</unqualifiedWorkSpeedMultiplier>
        <unqualifiedQualityCap>Legendary</unqualifiedQualityCap>
      </li>
    </value>
  </Operation>
</Patch>