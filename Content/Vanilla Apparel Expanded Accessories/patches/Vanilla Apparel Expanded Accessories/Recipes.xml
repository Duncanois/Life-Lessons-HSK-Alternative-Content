<?xml version="1.0" encoding="utf-8" ?>
<Patch>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="VAEA_Apparel_BattleBanner" or defName="VAEA_Apparel_Quiver"]</xpath>
    <value>
      <li Class="LifeLessons.BillProficiencyExtension">
        <hardRequirement>False</hardRequirement>

        <requirements>
          <li>Tailoring</li>
        </requirements>
        <rewards>
          <li>
            <proficiency>Tailoring</proficiency>
            <progressMultiplier>0.25</progressMultiplier>
          </li>
        </rewards>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="VAEA_Apparel_Backpack" or defName="VAEA_Apparel_MedicBag" or defName="VAEA_Apparel_ToolBelt" or defName="VAEA_Apparel_AmmoPack" or defName="VAEA_Apparel_ExplosiveBelt"]</xpath>
    <value>
      <li Class="LifeLessons.BillProficiencyExtension">
        <requirements>
          <li>Tailoring</li>
        </requirements>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="VAEA_Apparel_RangedShieldBelt"]</xpath>
    <value>
      <li Class="LifeLessons.BillProficiencyExtension">
        <requirements>
          <li>Electronics</li>
          <li>ExoticPhysics</li>
          <li>AdvancedFabrication</li>
        </requirements>
      </li>
    </value>
  </Operation>

  <Operation Class="PatchOperationAddModExtension">
    <xpath>Defs/ThingDef[defName="VAEA_Apparel_MiniTurretPack"]</xpath>
    <value>
      <li Class="LifeLessons.BillProficiencyExtension">
        <requirements>
          <li>Electronics</li>
          <li>AdvancedFabrication</li>
        </requirements>
      </li>
    </value>
  </Operation>

</Patch>